@model Dierentuin.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Animals
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var animal in Model.Animals)
                {
                    <li>
                        <a asp-controller="Animal" asp-action="Details" asp-route-id="@animal.Id">@animal.Name
                            (@animal.Species)</a>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
