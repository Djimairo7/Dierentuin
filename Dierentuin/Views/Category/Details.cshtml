@model Dierentuin.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1 class="categories-heading">Details</h1>

<div class="categories-details-card">
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Animals
        </dt>
        <dd class="col-sm-10">
            <ul class="animal-list">
                @foreach (var animal in Model.Animals)
                {
                    <li>
                        <a asp-controller="Animal" asp-action="Details" asp-route-id="@animal.Id" class="animal-link">@animal.Name (@animal.Species)</a>
                    </li>
                }
            </ul>
        </dd>
    </dl>
    <div class="details-actions">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="details-action-button">Edit</a>
        <a asp-action="Index" class="details-action-button">Back to List</a>
    </div>
</div>
