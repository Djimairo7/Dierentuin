@model IEnumerable<Dierentuin.Models.Animal>

@{
    ViewData["Title"] = "Animals";
}

<h1 class="enclosures-heading">Animals</h1>



<a asp-action="Create"></a>
<form asp-controller="Animal" asp-action="Index" method="get">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-auto d-flex">
                <input type="text" name="search" class="form-control mb-3 mt-3" style="margin-right: 5px;" />
                <input type="submit" value="Search" class="btn btn-outline-primary mb-2 me-2" />
                <a asp-action="Create" class="btn btn-outline-primary mb-2 col-2">Create New</a>
            </div>
        </div>
    </div>
</form>






<div class="enclosure-card-container">
    @foreach (var animal in Model)
    {
        <div class="enclosure-card">
            <div class="enclosure-card-header">
                @animal.Name
            </div>
            <div class="enclosure-card-body">
                <p class="card-text">Size: @animal.Size</p>
                <p class="card-text">Species: @animal.Species</p>
                <p class="card-text">Category: @animal.Category.Name</p>
                <p class="card-text">Enclosure: @animal.Enclosure.Name</p>
            </div>
            <div class="enclosure-card-footer">
                <a asp-action="Edit" asp-route-id="@animal.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@animal.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@animal.Id">Delete</a> |
                <a asp-action="SleepState" asp-route-id="@animal.Id">Sleep State</a> |
                <a asp-action="FeedingTime" asp-route-id="@animal.Id">Feeding Time</a>
            </div>
        </div>
    }
</div>











