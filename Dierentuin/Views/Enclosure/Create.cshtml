@model Dierentuin.Models.Enclosure

@{
    ViewData["Title"] = "Create Enclosure";
}

<h1 class="create-enclosure">Create Enclosure</h1>

<div class="d-flex justify-content-center">
    <div class="card shadow form-container">
        <div class="card-header">
            <h4 class="mb-0">Enclosure Details</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter enclosure name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Climate" class="form-label"></label>
                    <select asp-for="Climate" class="form-select">
                        @foreach (var climate in Enum.GetValues(typeof(Dierentuin.Models.Enclosure.ClimateTypes)))
                        {
                        <option value="@climate">@climate</option>
                        }
                    </select>
                    <span asp-validation-for="Climate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Habitat" class="form-label"></label>
                    <select asp-for="Habitat" class="form-select">
                        @foreach (var habitat in Enum.GetValues(typeof(Dierentuin.Models.Enclosure.HabitatType)))
                        {
                        <option value="@habitat">@habitat</option>
                        }
                    </select>
                    <span asp-validation-for="Habitat" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Security" class="form-label"></label>
                    <select asp-for="Security" class="form-select">
                        @foreach (var security in Enum.GetValues(typeof(Dierentuin.Models.Enclosure.SecurityLevel)))
                        {
                        <option value="@security">@security</option>
                        }
                    </select>
                    <span asp-validation-for="Security" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Size" class="form-label"></label>
                    <input asp-for="Size" class="form-control" placeholder="Enter enclosure size" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
